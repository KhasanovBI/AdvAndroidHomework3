<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_change_contact_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ContactInfoFragment">

    <ImageView
        android:id="@+id/contact_info_image"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/splash_screen_image" />

    <ImageButton
        android:id="@+id/change_contact_info_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/contact_info_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/ic_party_mode_black_48dp" />

    <EditText
        android:id="@+id/contact_info_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_contact_info_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:hint="@string/status"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/contact_info_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_info_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/save" />
</RelativeLayout>
